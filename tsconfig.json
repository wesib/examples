{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2015",
    "target": "ES2019",
    "strict": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "DOM",
      "ES2019"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*.ts"
  ]
}
